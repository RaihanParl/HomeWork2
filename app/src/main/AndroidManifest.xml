            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddSoal" />
        <activity
            android:name=".gambar.Upload"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Comment"
            android:screenOrientation="portrait" />
