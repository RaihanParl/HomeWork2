<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bidjidevelops.hd.Profile">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/student"
        android:id="@+id/imgprof"/>
<android.support.v7.widget.ButtonBarLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></android.support.v7.widget.ButtonBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/imgprof"
        android:background="#2e1d1d1d"
        android:layout_alignLeft="@+id/imgprof"
        android:layout_alignStart="@+id/imgprof"
        android:layout_alignRight="@+id/imgprof"
        android:layout_alignEnd="@+id/imgprof"></RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama:"
            android:id="@+id/txtnama"
            android:textSize="@dimen/font_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="budi"
            android:id="@+id/txtnamanya"
            android:layout_toRightOf="@+id/txtnama"
            android:textSize="@dimen/font_size"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ednama"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/txtnama"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEmail"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmailnya"
            android:layout_toRightOf="@+id/txtEmail"
            android:textSize="@dimen/font_size"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edemail"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/txtEmail"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/txtEmail"
            android:textSize="@dimen/font_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutSekolah"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMK MQ"
            android:id="@+id/txtSekolahnya"
            android:layout_toRightOf="@+id/txtSekolah"
            android:textSize="@dimen/font_size"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edsekolah"
            android:visibility="invisible"

            android:layout_toRightOf="@+id/txtSekolah"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sekolah:"
            android:id="@+id/txtSekolah"
            android:textSize="@dimen/font_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:onClick="Edit"
        android:layout_height="wrap_content"
        android:text="edit profile" />
    <Button
        android:id="@+id/btnEditImage"
        android:layout_width="match_parent"
        android:onClick="Image"
        android:layout_height="wrap_content"
        android:text="edit Image" />
</LinearLayout>
