<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bidjidevelops.hd.Profile"
    tools:showIn="@layout/activity_profile2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama:"
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:id="@+id/txtnamanya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtnama"
                    android:text=""
                    android:textSize="@dimen/font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEmailnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtEmail"
                    android:textSize="@dimen/font_size" />


                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Email:"
                    android:textSize="@dimen/font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutSekolah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSekolahnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtSekolah"
                    android:text=""
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:id="@+id/txtSekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Sekolah:"
                    android:textSize="@dimen/font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutdesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDesknya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDesk"
                    android:text=""
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:id="@+id/txtDesk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Deskripsi:"
                    android:textSize="@dimen/font_size" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnabutton"
                android:onClick="Edit"
                android:textAllCaps="false"
                android:text="Edit Profile"
                android:visibility="gone" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/btnEditImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/warnabutton"
                android:onClick="Image"
                android:text="Ganti Foto Profil"
                android:visibility="gone"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btnEditImagesam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnEditImage"
                android:background="@color/warnabutton"
                android:layout_marginTop="10dp"
                android:onClick="Imagesamp"
                android:textAllCaps="false"
                android:text="Ganti Foto Sampul"
                android:visibility="gone" />
    </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
