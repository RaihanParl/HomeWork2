<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8e8c8c"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imguser_comment"
                android:layout_width="55dp"
                android:layout_height="43dp"
                android:src="@drawable/edit"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/txtusername_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imguser_comment"
                android:text="Curutjo"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/txtcoment_coment"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@id/imguser_comment"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtcomment_comentall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imguser_comment"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>